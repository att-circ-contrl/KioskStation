function search(){window.location=window.location.origin+"?"+createQueryString()}function IndexSearch(){window.location.search=createQueryString()}function selectchanged(){window.location.search=createQueryString()}function addQueryStringToProductLinks(){var n=$("a.product-link");$.each(n,function(n,t){t.href=t.href.replace(/\?language=[a-zA-Z]*/,"")+"?language="+$("#Language").selectpicker("val")})}function createQueryString(){function t(n,t,r){var u=$(n).selectpicker("val");return typeof u=="string"?i(t,u):i(t,r)}function i(t,i){return i==null?"":n!=""?"&"+t+"="+i:t+"="+i}var n="",r=$("input#search").val().trim();return r&&(n+=i("q",r)),n+=t("#Language","language","any"),n+=t("#Product","product","all products"),n+=t("#DocumentType","doctype","all types")}function adjustHeight(){$("main").css("min-height",$(document).outerHeight()-$("section.search-section").outerHeight())}function getParameterByName(n,t){t||(t=window.location.href);n=n.replace(/[\[\]]/g,"\\$&");var r=new RegExp("[?&]"+n+"(=([^&#]*)|&|#|$)"),i=r.exec(t);return i?i[2]?decodeURIComponent(i[2].replace(/\+/g," ")):"":null}String.prototype.trim||(String.prototype.trim=function(){return this.replace(/^[\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g,"")});window.location.origin||(window.location.origin=window.location.protocol+"//"+window.location.hostname+(window.location.port?":"+window.location.port:""));String.prototype.trim||(String.prototype.trim=function(){return this.replace(/^[\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g,"")});$(function(){function n(n,t,i){$(n).on("loaded.bs.select",function(){var r=getParameterByName(t),u;r&&(r=r.toLowerCase(),i&&(r=encodeURI(r)),u=$(n),u.find('[value="'+r+'"]').length>0&&(u.selectpicker("val",r),addQueryStringToProductLinks()))})}var t=window.innerHeight;adjustHeight();$(window).resize(function(){t!==window.innerHeight&&adjustHeight()});$("div.logo > a").attr("href",window.location.origin);n("#Language","language",!0);n("#Product","product");n("#DocumentType","doctype");$("#search").val(getParameterByName("q"));$("#search").keypress(function(n){return n.which&&n.which==13||n.keyCode&&n.keyCode==13?($("button#search-btn").click(),!1):!0})})